<% layout('layouts/boilerplate.ejs') -%>
    <div>
        <h1>Register</h1>
    </div>
    <div class="flex-fill d-flex flex-column justify-content-center mt-4">
        <%- include("./partials/flash") %>
            <form action="/register" method="POST">
                <div class="d-flex flex-column justify-content-between">
                    <input type="text" name="username" placeholder="Username" class="form-control"> <br>
                    <input type="text" name="email" placeholder="Email" class="form-control"> <br>
                    <input type="password" name="password" placeholder="password" class="form-control"> <br>
                    <input type="password" name="password2" placeholder="Re-enter password" class="form-control"><br>
                    <button class="btn btn-success col-6 m-auto"> Register </button>
                    <a href="/login" class="link-info mt-3">Already registered?</a>
                </div>
            </form>
    </div>